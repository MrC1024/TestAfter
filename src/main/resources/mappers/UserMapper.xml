<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.bdqn.exam.dao.UserMapper" >
  <resultMap id="BaseResultMap" type="cn.bdqn.exam.entity.User" >
    <id column="user_id" property="userId" jdbcType="INTEGER" />
    <result column="userName" property="username" jdbcType="VARCHAR" />
    <result column="account" property="account" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="sex" property="sex" jdbcType="CHAR" />
    <result column="deptID" property="deptid" jdbcType="VARCHAR" />
    <result column="points" property="points" jdbcType="INTEGER" />
    <association property="dept" javaType="cn.bdqn.exam.entity.Dept">
     <result column="deptName" property="deptname"></result>
    </association>
      <association property="mark" javaType="cn.bdqn.exam.entity.Mark">
          <result column="mScore" property="mscore"></result>
      </association>
  </resultMap>
    <select id="getAll" resultMap="BaseResultMap" >
        SELECT u.*,d.`deptName`,m.`mScore`  FROM USER u,dept d,mark m WHERE u.`deptID`=d.`deptID` and  u.`user_id` = m.`user_Id` and if_del=0
    </select>
    <!--<delete id="del" parameterType="Integer">
        DELETE FROM USER WHERE user_id=#{id}
    </delete>-->
    <update id="del" parameterType="Integer">
        UPDATE USER SET if_del=1 WHERE user_id = #{user_id}
    </update>
    <insert id="add" parameterType="cn.bdqn.exam.entity.User" >
      INSERT INTO USER VALUES(NULL,#{username},#{account},#{password},#{sex},#{deptid},#{points})
    </insert>
    <select id="getALL" resultType="cn.bdqn.exam.entity.Dept">
       select  * from dept
    </select>
    <select id="getById"  resultMap="BaseResultMap" >
        SELECT u.*,d.`deptName`,m.`mScore`  FROM USER u,dept d,mark m WHERE u.`deptID`=d.`deptID` AND  u.`user_id` = m.`user_Id` AND u.user_id=#{id}
    </select>
    <update id="upd" parameterType="cn.bdqn.exam.entity.User">
          UPDATE USER SET password=#{password} where user_id=#{userId}
    </update>



</mapper>